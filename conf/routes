# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @cn.edu.sdu.erp.system.commons.controllers.HomepageController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /mps/index                  @cn.edu.sdu.erp.system.mps.controllers.MpsController.index()
GET     /mrp/index                  @cn.edu.sdu.erp.system.mrp.controllers.MrpController.index()
